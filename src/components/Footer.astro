---
// libraries
import { Icon } from 'astro-icon/components';

// components
import Logo from '@components/Logo.astro';
import Link from '@components/ui/links/Link.astro';

// data
import { footerLinks, socialLinks } from '@data/footerData';
---

<footer class='site-footer'>
  <div class='content-grid'>
    <div class='site-footer__inner'>
      <Logo type='footer' />
      <ul class='site-footer__list'>
        {
          footerLinks.map((item) => (
            <li>
              <Link text={item.name} href={item.path} />
            </li>
          ))
        }
      </ul>
      <ul class='site-footer__list'>
        {
          socialLinks.map(({ href, title, icon }) => (
            <li>
              <a href={href} aria-label={title} title={title}>
                <Icon name={icon} size={24} />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div>
      <small style='color: var(--gray-5);'>
        Copyright &copy;<span id='copyright'>{new Date().getFullYear()}</span> |
        All rights reserved.
      </small>
    </div>
  </div>
</footer>

<!-- Script -->
<script>
  // Set actual year in the footer
  const copyrightSpan = document.getElementById('copyright') as HTMLSpanElement;
  copyrightSpan.textContent = new Date().getFullYear().toString();
</script>
