---
// libraries
import { Icon } from 'astro-icon/components';
import { type HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  id?: string;
  alt?: string;
  href?: string;
  text?: string;
  dataType?: 'accent' | 'primary' | 'outline' | 'btn-icon';
  icon?: {
    name?: string;
    side: 'left' | 'right';
  };
  classes?: string;
}

const { id, alt, href, text, dataType, icon, classes, ...rest } =
  Astro.props as Props;
---

<a
  data-type={dataType}
  href={href}
  id={id}
  class:list={['link', classes]}
  {...rest}
>
  {
    icon && icon.side === 'left' && (
      <Icon name={icon.name} width={24} height={24} />
    )
  }
  <span>{text}</span>
  {
    icon && icon.side === 'right' && (
      <Icon name={icon.name} width={24} height={24} />
    )
  }
</a>
