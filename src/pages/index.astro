---
// component imports
import Layout from '@layouts/Layout.astro';

import Hero from '@components/Hero.astro';
import Modal from '@components/Modal.astro';
import PricingCard from '@components/cards/PricingCard.astro';
import Tabs from '@components/Tabs.astro';
import ThemeSwitcher from '@components/ThemeSwitcher.astro';

// data
import plansData from '@data/plansData.json';
---

<Layout title='Welcome to Astro.'>
  <Hero />

  <section class='page-content'>
    <div class='content-grid'>
      <p class='text'>New text</p>
      <h2 class='heading-2'>Get Started With Astro</h2>
      <p>
        Get a new Astro project up and running locally with our helpful
        create-astro CLI wizard!
      </p>
      <!-- Tabs with dynamic content -->
      <Tabs />
      <Modal dialogType='megaDialog' />
      <!-- <ThemeSwitcher /> -->
      <!-- Cards -->
      <section class='even-columns'>
        {plansData.map((card) => <PricingCard data={card} />)}
      </section>
    </div>

    <!-- <Buttons /> -->
  </section>
</Layout>

<!-- Lenis library for a smooth scrolling -->
<script
  is:inline
  src='https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.22/bundled/lenis.min.js'
></script>

<script>
  import '@scripts/main.js';
</script>
